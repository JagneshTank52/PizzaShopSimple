@{
    ViewData["Title"] = "Home Page";
    Layout = "_OrderAppLayout";
}

<section class="d-flex h-100">
    <aside class="menu-sidebar offcanvas-lg" tabindex="-2" id="offcanvasResponsive"
        aria-labelledby="offcanvasResponsiveLabel">
        <ul>
            <li>
                <a asp-action="UserList" asp-controller="User" class="nav-link active" aria-current="page">
                    <span class="title fs-4 fw-semibold"> Category </span>
                </a>
            </li>
            <li>
                <a asp-action="Role" asp-controller="RoleAndPermission" class="nav-link active" aria-current="page">
                    <span class="title">Role and Permission</span>
                </a>
            </li>
            <li>
                <a asp-action="Role" asp-controller="RoleAndPermission" class="nav-link active" aria-current="page">
                    <span class="title">Role and Permission</span>
                </a>
            </li>
            <li>
                <a asp-action="Role" asp-controller="RoleAndPermission" class="nav-link active" aria-current="page">
                    <span class="title">Role and Permission</span>
                </a>
            </li>
            <li>
                <a asp-action="Role" asp-controller="RoleAndPermission" class="nav-link active" aria-current="page">
                    <span class="title">Role and Permission</span>
                </a>
            </li>

        </ul>
    </aside>


    <section class="d-flex flex-column flex-grow-1 p-3">
        <div class="top-navbar d-flex justify-content-between align-items-center mb-3">
            <div class="navbar-left d-flex">
                <button class="menu-sidebar-btn bg-transparent border-0 p-0 me-3 d-lg-none d-block" title="menu bar" type="button"
                    data-bs-toggle="offcanvas" data-bs-target="#offcanvasResponsive"
                    aria-controls="offcanvasResponsive">
                    <img src="../images/menu-bar-black.svg" width="30" height="30" alt="" />
                </button>

            <!-- <div class="search-container position-relative">
                <input type="text" class="form-control ps-4 rounded" placeholder="Search">
                <span class="position-absolute start-0 top-50 translate-middle-y ms-2">
                    <i class="bi bi-search"></i>
                </span>
            </div> -->

            <div class="position-relative d-flex flex-grow-1">
                <input type="text" class="form-control" id="searchInput" placeholder="Search">
                <Button type="submit" class="search-btn" id="searchID"
                    style="background-color: transparent; border: none;">
                    <i class="bi bi-search fs-5"></i>
                </Button>
            </div>
            </div>
            <div>
                <div class="d-flex align-items-center ms-3">
                    <i class="bi bi-circle-fill text-success ms-4 me-2" style="font-size: 0.7rem;"></i> Vegitarian
                    <i class="bi bi-circle-fill text-primary ms-4 me-2" style="font-size:0.7rem;"></i> Non-Vegitarian
                    <i class="bi bi-circle-fill text-info ms-4 me-2" style="font-size: 0.7rem;"></i> Vegan
                </div>
            </div>
        </div>

        <div>
            <div class="menu-card">
                <div class="corner-icon vegetarian-corner"></div>
                <div class="card-inner">
                    <div class="card-image-container">
                        <img src="/images/Default_pfp.svg.png" alt="Capsicum" class="card-image">
                    </div>
                    <div class="card-content">
                        <h5 class="mb-1 fw-bold">Capsicum</h5>
                        <p class="mb-0 text-secondary">₹800</p>
                    </div>
                </div>
                <div class="heart-icon filled-heart">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="18" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                        <path d="M8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748z"/>
                    </svg>
                </div>
            </div>
        </div>

    </section>

    <section class="d-flex flex-column flex-grow-1 p-3">
         <div class="card">
            <!-- Header Section -->
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-building me-2"></i>
                        <div>
                            <div class="fw-bold">First Floor</div>
                            <div class="text-muted small">Table: T2, T6</div>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-outline-secondary btn-sm mx-1"><i class="bi bi-envelope"></i></button>
                        <button class="btn btn-outline-secondary btn-sm mx-1"><i class="bi bi-person"></i></button>
                        <button class="btn btn-outline-secondary btn-sm mx-1"><i class="bi bi-printer"></i></button>
                    </div>
                </div>
            </div>

            <!-- Order Items Table -->
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr class="table-light">
                            <th style="width: 60%">Item</th>
                            <th class="text-center" style="width: 20%">Quantity</th>
                            <th class="text-end" style="width: 15%">Amount</th>
                            <th style="width: 5%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Margherita Item -->
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-chevron-down chevron-icon me-2"></i>
                                    <span>Margherita</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center align-items-center">
                                    <button class="btn-quantity rounded-start">-</button>
                                    <input type="text" class="quantity-input" value="1">
                                    <button class="btn-quantity rounded-end">+</button>
                                </div>
                            </td>
                            <td class="text-end">₹120.00</td>
                            <td class="text-center">
                                <i class="bi bi-trash text-secondary"></i>
                            </td>
                        </tr>
                        <tr>
                            <td class="addon-item">
                                <i class="bi bi-dot me-1"></i>Onion
                            </td>
                            <td></td>
                            <td class="text-end">₹20.00</td>
                            <td></td>
                        </tr>

                        <!-- Aaloo Sandwich Item -->
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-chevron-down chevron-icon me-2"></i>
                                    <span>Aaloo Sandwich</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center align-items-center">
                                    <button class="btn-quantity rounded-start">-</button>
                                    <input type="text" class="quantity-input" value="1">
                                    <button class="btn-quantity rounded-end">+</button>
                                </div>
                            </td>
                            <td class="text-end">₹120.00</td>
                            <td class="text-center">
                                <i class="bi bi-trash text-secondary"></i>
                            </td>
                        </tr>
                        <tr>
                            <td class="addon-item">
                                <i class="bi bi-dot me-1"></i>Mushroom
                            </td>
                            <td></td>
                            <td class="text-end">₹50.00</td>
                            <td></td>
                        </tr>

                        <!-- Capsicum Item -->
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-chevron-down chevron-icon me-2"></i>
                                    <span>Capsicum</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center align-items-center">
                                    <button class="btn-quantity rounded-start">-</button>
                                    <input type="text" class="quantity-input" value="1">
                                    <button class="btn-quantity rounded-end">+</button>
                                </div>
                            </td>
                            <td class="text-end">₹800</td>
                            <td class="text-center">
                                <i class="bi bi-trash text-secondary"></i>
                            </td>
                        </tr>
                        <tr>
                            <td class="addon-item">
                                <i class="bi bi-dot me-1"></i>Onion
                            </td>
                            <td></td>
                            <td class="text-end">₹20</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td class="addon-item">
                                <i class="bi bi-dot me-1"></i>Pepperoni
                            </td>
                            <td></td>
                            <td class="text-end">₹500</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td class="addon-item">
                                <i class="bi bi-dot me-1"></i>Medium
                            </td>
                            <td></td>
                            <td class="text-end">₹150</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Order Summary Section -->
            <div class="card-footer bg-white">
                <div class="row">
                    <!-- Cost Summary -->
                    <div class="col-md-12 offset-md-6 m-0">
                        <div class="summary-row">
                            <span>SubTotal</span>
                            <span>₹1780.00</span>
                        </div>
                        <div class="summary-row">
                            <span>CGST</span>
                            <span>₹213.60</span>
                        </div>
                        <div class="summary-row">
                            <span>SGST</span>
                            <span>₹25.60</span>
                        </div>
                        <div class="summary-row">
                            <span>Other</span>
                            <span>₹99.00</span>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="sgstCheck">
                                <label class="form-check-label" for="sgstCheck">SGST</label>
                            </div>
                        </div>
                        <div class="summary-row total-row">
                            <span>Total</span>
                            <span>₹2118.20</span>
                        </div>
                    </div>
                </div>

                <!-- Payment Method Section -->
                <div class="mt-3">
                    <div class="text-muted mb-2">Payment Method</div>
                    <div class="d-flex">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="cashPayment" checked>
                            <label class="form-check-label" for="cashPayment">Cash</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="cardPayment">
                            <label class="form-check-label" for="cardPayment">Card</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="upiPayment">
                            <label class="form-check-label" for="upiPayment">UPI</label>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row mt-4 action-buttons">
                    <div class="col-md-3 col-6">
                        <button class="btn btn-primary">Save</button>
                    </div>
                    <div class="col-md-3 col-6">
                        <button class="btn btn-outline-primary">Complete</button>
                    </div>
                    <div class="col-md-3 col-6">
                        <button class="btn btn-outline-primary">Generate Invoice</button>
                    </div>
                    <div class="col-md-3 col-6">
                        <button class="btn btn-outline-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
        
</section>

<!-- Modal -->
<div class="modal fade" id="add-item" tabindex="-1" aria-labelledby="itemModelLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="fs-5" id="itemModelLabel">Add New Menu Item</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="add-item-form">
                
            </div>
        </div>
    </div>
</div>

