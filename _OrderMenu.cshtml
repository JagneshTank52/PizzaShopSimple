    function getOrderItem() {
        $.ajax({
            url: "/OrderAppMenu/GetOrderItemList",
            data: { orderId: orderId },
            type: "GET",
            success: function (response, status, xhr) {
                var contentType = xhr.getResponseHeader("Content-Type")
