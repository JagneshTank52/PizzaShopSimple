@using PizzaShop.Entity.ViewModels.UserVM
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShop.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PizzaShop.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet"/>

</head>
<body>
    <aside class="sidebar offcanvas-lg" tabindex="-2" id="offcanvasResponsive"
        aria-labelledby="offcanvasResponsiveLabel">
        <ul>
            <li class="d-flex justify-content-between align-items-center">
                <div>
                    <a href="#" class="nav-link active" aria-current="page">
                        <span class="icon">
                            <img src="/images/pizzashop_logo.png" width="60" height="50" alt="" />
                        </span>
                        <span class="title fs-4 fw-bold"> PIZZASHOP </span>
                    </a>
                </div>
            </li>
            <li>
                <a class="nav-link active" asp-action="Index" asp-controller="Home" aria-current="page">
                    <span class="icon">
                        <i class="bi bi-border-all"></i>
                        @* <img src="/images/dashboard-default.svg" width="35" height="35" alt="" /> *@
                    </span>
                    <span class="title"> Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-action="UserList" asp-controller="User" class="nav-link active" aria-current="page">
                    <span class="icon">
                        <i class="bi bi-people"></i>
                        @* <img src="/images/people.svg" width="35" height="35" alt="" /> *@
                    </span>
                    <span class="title"> Users </span>
                </a>
            </li>
            <li>
                <a asp-action="Role" asp-controller="RoleAndPermission" class="nav-link active" aria-current="page">
                    <span class="icon">
                        <i class="bi bi-person-gear"></i>
                        @* <img src="/images/person-gear.svg" width="35" height="35" alt="" /> *@
                    </span>
                    <span class="title">Role and Permission</span>
                </a>
            </li>
            <li>
                <a asp-action="MenuItem" asp-controller="Menu" class="nav-link active" aria-current="page">
                    <span class="icon">
                        <i class="bi bi-pencil-square"></i>
                        @* <img src="/images/pencil-square.svg" width="35" height="35" alt="" /> *@
                    </span>
                    <span class="title"> Menu </span>
                </a>
            </li>
            <li>
                <a asp-action="SectionAndTable" asp-controller="SectionAndTables" class="nav-link active" aria-current="page">
                    <span class="icon">
                        <i class="bi bi-grid"></i>
                        @* <img src="/images/table.svg" width="35" height="35" alt="" /> *@
                    </span>
                    <span class="title">Table and Section</span>
                </a>
            </li>
            <li>
                <a  class="nav-link active" aria-current="page">
                    <span class="icon">
                        <i class="bi bi-cash-coin"></i>
                        @* <img src="/images/dashboard-default.svg" width="35" height="35" alt="" /> *@
                    </span>
                    <span class="title"> Taxes and Fees</span>
                </a>
            </li>
            <li>
                <a class="nav-link active" aria-current="page">
                    <span class="icon">
                        <i class="bi bi-clipboard-check"></i>
                        @* <img src="/images/dashboard-default.svg" width="35" height="35" alt="" /> *@
                    </span>
                    <span class="title"> Orders </span>
                </a>
            </li>
            <li>
                <a class="nav-link active" aria-current="page">
                    <span class="icon">
                        <i class="bi bi-person-rolodex"></i>
                        @* <img src="/images/dashboard-default.svg" width="35" height="35" alt="" /> *@
                    </span>
                    <span class="title"> Customers</span>
                </a>
            </li>
        </ul>
    </aside>

   <section class="main flex-grow-1">
        <!-- NavBar -->
        <section class="topbar">
            <button class="sidebar-btn btn bg-transparent border-0 p-0" title="menu bar" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#offcanvasResponsive" aria-controls="offcanvasResponsive">
                <img src="../images/menu-bar.svg" width="30" height="30" alt="" />
            </button>


            <div class="profile dropdown">
                <button class=" rounded-circle border-0 dropdown-toggle" aria-expanded="false" type="button" data-bs-toggle="dropdown" style="background-color: var(--primary-color);">
                    <img src="@(TempData["ProfileImage"] ?? "/images/Default_pfp.svg.png")" alt="" width="40" height="40" style="border-radius: 50%;"/>
                </button>
                <ul class="dropdown-menu">
                    <li class="d-flex justify-content-center  align-items-center ps-3 pe-3 mb-2">
                        <img src="/images/Default_pfp.svg.png" alt="" width="40" height="40" />
                        <p class="mb-0 ms-3">@User.FindFirst(ClaimTypes.Name)!.Value</p>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item d-flex align-items-center"  asp-action="MyProfile" asp-controller="Home">
                        <span>
                             <i class="bi bi-person-circle" style="font-size: 25px; "></i>
                        </span>
                        <span class="ms-2">
                            <p class="mb-0">My profile</p>
                        </span>
                    </a></li>
                    <li><a class="dropdown-item d-flex align-items-center" asp-action="ChangePassword" asp-controller="Home">
                        <span>
                             <i class="bi bi-arrow-clockwise fs-4" style="font-size: 25px;"></i>
                        </span>
                        <span class="ms-2">
                            <p class="mb-0">Change Password</p>
                        </span>
                    </a></li>
                    <li><a class="dropdown-item d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        <span>
                             <i class="bi bi-box-arrow-right fs-4" style="font-size: 25px;"></i>
                        </span>
                        <span class="ms-2">
                            <p class="mb-0">Logout</p>
                        </span>
                    </a></li>
                </ul>
            </div>



        </section>

        <!-- main-content -->
        <section class="main-section flex-grow-1 py-3 px-4">

            @RenderBody()
            <partial name="_Notification"/>
        
        </section>

        <div class="dropdown">
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
        </div>
    </section>

    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Logout Confirmation</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column align-items-center">
                    <i class="bi bi-exclamation-triangle-fill text-warning fs-3"></i>
                    <h5>Are you sure you want to Logout ?</h5>
                </div>
                <form method="get" asp-action="Logout" asp-controller="Account">
                    <div class="modal-footer d-flex justify-content-center">
                    <button type="submit" class="btn outline-btn btn-primary">Yes</button>
                    <button type="button" class="btn outline-btn btn-secondary" data-bs-dismiss="modal">No</button>

                </div>
                </form>
            </div>
        </div>
    </div>

    
    <div class="modal fade" id="delete-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Confirmation</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex flex-column align-items-center">
                <i class="bi bi-exclamation-triangle-fill text-warning fs-3"></i>
                <h5>Are you sure you want to Delete ?</h5>
            </div>
            <form method="get" id="deleteUserForm" asp-controller="User">
                <div class="modal-footer d-flex justify-content-center">
                    <button type="submit" class="btn outline-btn btn-primary">Yes</button>
                    <button type="button" class="btn outline-btn btn-secondary" data-bs-dismiss="modal">No</button>
                </div>
            </form>
        </div>
    </div>
</div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $(".sidebar ul li a").each(function(){
                if(this.href.split('/')[3] === window.location.href.split('/')[3]){
                    $(this).parent().addClass("active");
                }  
                });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
